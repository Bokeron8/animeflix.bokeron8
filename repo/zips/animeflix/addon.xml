<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="animeflix" name="Animeflix" version="1.0.0" provider-name="bokeron8">
<extension point="xbmc.addon.repository" name="Example Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/bokeron8/animeflix.bokeron8/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/bokeron8/animeflix.bokeron8/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/bokeron8/animeflix.bokeron8/master/repo/zips/</datadir>
        </dir>
    </extension>
    <requires>
		<import addon="xbmc.python" version="1.0.0"/>
		<import addon="script.module.requests"/>
	</requires>
    <extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
    <extension point="xbmc.addon.metadata">
        <summary>Animeflix</summary>
        <description>Una aplicacion para mirar anime</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>